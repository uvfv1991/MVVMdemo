<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_title"
        android:paddingBottom="@dimen/margin_padding_10dp"
        android:paddingTop="@dimen/margin_padding_10dp"
        android:layout_marginStart="@dimen/margin_padding_15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/font_black"
        android:text="热门分类"
        android:textSize="@dimen/font_size_18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/tv_more"
        app:layout_constraintBottom_toBottomOf="@id/tv_title"
        app:layout_constraintTop_toTopOf="@id/tv_title"
        android:layout_marginEnd="@dimen/margin_padding_15dp"
        app:layout_constraintRight_toRightOf="parent"
        android:text="查看更多分类  >"
        android:textColor="@color/bg_main_color"
        android:textSize="@dimen/font_size_14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginStart="@dimen/margin_padding_15dp"
        android:id="@+id/rv_category"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>