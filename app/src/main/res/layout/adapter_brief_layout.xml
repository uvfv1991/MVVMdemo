<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <ImageView
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/margin_padding_15dp"
        android:id="@+id/im_cover"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="60dp"
        android:layout_height="60dp"
        />


    <TextView
        android:textColor="@color/font_black"
        app:layout_constraintEnd_toStartOf="@id/tv_care"
        android:layout_marginStart="@dimen/margin_padding_15dp"
        app:layout_constraintStart_toEndOf="@id/im_cover"
        app:layout_constraintTop_toTopOf="@id/im_cover"
        android:layout_width="0dp"
        android:id="@+id/tv_title"
        android:textSize="@dimen/font_size_13sp"
        android:text="雨后的世界"
        android:lines="1"
        android:ellipsize="end"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="@color/font_grey"
        app:layout_constraintEnd_toStartOf="@id/tv_care"
        android:layout_marginStart="@dimen/margin_padding_15dp"
        app:layout_constraintStart_toEndOf="@id/im_cover"
        app:layout_constraintBottom_toBottomOf="@id/im_cover"
        android:layout_width="0dp"
        android:id="@+id/tv_desc"
        android:textSize="@dimen/font_size_13sp"
        android:text="雨后的世界"
        android:lines="1"
        android:ellipsize="end"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="@color/font_black"
        android:layout_marginEnd="@dimen/margin_padding_15dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/tv_care"
        android:textSize="@dimen/font_size_14sp"
        android:text="+关注"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <View
        android:background="@color/bg_dirver"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>